<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textView_habit_item_recyclerview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="editText" />

    <LinearLayout
        android:id="@+id/add_category_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/editText_habit_item_recyclerview_item"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:hint="Enter new category name"
            android:background="@color/white"/>

        <Button
            android:id="@+id/saveBtn_habit_item_recyclerview_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="49dp"
        android:layout_gravity="center_horizontal"/>
</FrameLayout>

